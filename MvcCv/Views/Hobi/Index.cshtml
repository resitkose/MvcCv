
@using MvcCv.Models.Entity
@model List<TblHobilerim>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>Hobi Listesi</h2>

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Hobi Adı</th>
        <th>Açıklama</th>
        <th>SİL</th>
        <th>DÜZENLE</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <th>@x.ID</th>
            <td>@x.Aciklama1</td>
            <td>@x.Aciklama2</td>
            <td>
                <a class="btn btn-danger btn-sm" href="/Hobi/HobiSil/@x.ID">
                    <i class="fas fa-trash"></i>
                    Sil
                </a>
            </td>
            <td>
                <a class="btn btn-info btn-sm" href="/Hobi/HobiGetir/@x.ID">
                    <i class="fas fa-pencil-alt">
                    </i>
                    Düzenle
                </a>
            </td>
        </tr>
    }
</table>
<a href="/Hobi/HobiEkle/" class="btn btn-primary">Yeni Hobi Ekle</a>