@using MvcCv.Models.Entity
@model List<TblIletisim>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body">
                            <div class="tab-pane" id="timeline">
                                <div class="timeline timeline-inverse">
                                    @foreach (var x in Model)
                                    {
                                        <div class="time-label">
                                            <span class="bg-info">
                                                @(((DateTime)x.Tarih).ToString("dd-MM-yyyy"))
                                            </span>
                                        </div>
                                        <div>
                                            <i class="fas fa-comments bg-warning"></i>
                                            <div class="timeline-item">
                                                <span class="time"><i class="fa fa-at"></i> @x.Mail</span>
                                                <h3 class="timeline-header"><a href="#">@x.Adsoyad</a> @x.Konu</h3>
                                                <div class="timeline-body">
                                                    @x.Mesaj
                                                </div>
                                                <div class="timeline-footer">
                                                    <a href="/Iletisim/IletisimSil/@x.ID" class="btn btn-warning btn-flat btn-sm">Mesajı Sil</a>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    </section>
</body>
</html>