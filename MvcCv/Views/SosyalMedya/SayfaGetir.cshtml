@model MvcCv.Models.Entity.TblSosyalMedya
@{
    ViewBag.Title = "YetenekDuzenle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h4>Sosyal Medya Hesap Düzenleme Sayfası</h4>
<br />
<form method="post">
    @Html.Label("Sosyal Medya ID")
    @Html.TextBoxFor(x => x.ID, new { @class = "form-control", @readonly = "true" })
    <br />
    @Html.Label("Sosyal Medya Adı")
    @Html.TextBoxFor(x => x.Ad, new { @class = "form-control" })
    <br />
    @Html.Label("Sosyal Medya Linki")
    @Html.TextBoxFor(x => x.Link, new { @class = "form-control" })
    <br />
    @Html.Label("Sosyal Medya Iconu")
    @Html.TextBoxFor(x => x.Icon, new { @class = "form-control" })
    <br />
    <button class="btn btn-success">Güncelle</button>
</form>
